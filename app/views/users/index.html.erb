<h1>Listing users</h1>

<table>
  <tr><th>name</th><th>username</th><th>password</th><th colspan="3">&nbsp;</th></tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td><td><%= user.user_name %></td><td><%= user.password %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>